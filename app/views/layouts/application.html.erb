<!DOCTYPE html>
<html>
<head>
  <title>SweetReceipt2</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
<!-- START NAV -->
<nav class="navbar navbar-inverse navbar-fixed-top">
	<div class="container-fluid">
		<div class="navbar-header">
		<!-- NAVBAR LOGO -->
			<a class="navbar-brand" href="#">
				<img alt="Sweet Receipt Logo" src="...">
			</a>
		</div>
		<!-- PULL RIGHT LINKS AND DROPDOWNS -->
		<ul class="nav navbar-nav navbar-right pull-right">
		       <li><a href="#">About</a></li>
		       <li class="dropdown">
		         <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
		         	<% if user_signed_in? %>
		         	<%= current_user.email %> 
		         <ul class="dropdown-menu navbar-right" role="menu">	           	
		     		<li> <%= link_to 'My Receipts', receipts_path%></li>
		     		<li><%= link_to "Create Receipt", new_receipt_path %></li>
		     		<li> <%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
		         	<% else %> 
		         		<%= link_to 'Login', new_user_session_path %> <span class="caret"></span></a>
		         		<%= link_to 'Sign Up', new_user_registration_path %> <span class="caret"></span></a>
		         	<% end %>
		           <li><a href="#">Dashboard</a></li>
		           <li><a href="#">Another action</a></li>
		           <li><a href="#">Something else here</a></li>
		           <li class="divider"></li>
		           <li><a href="#">Separated link</a></li>
		         </ul>
		       </li>
		     </ul> 
		</div> <!-- close .container-fluid -->
	</div>
</nav>

<!-- ALERT MESSAGES-->
<div>
	<p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
</div>

<%= yield %>

<footer>
</footer>

</body>
</html>
